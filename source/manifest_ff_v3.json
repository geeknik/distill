{
	"manifest_version": 3,
	"name": "Distill",
	"version": "0.0.1",
	"description": "Distill web pages in seconds",
	"homepage_url": "https://github.com/jezer0x/distill",
	"browser_specific_settings": {
		"gecko": {
			"id": "tldrBot@example.com"
		}
	},
	"background": {
		"scripts": ["background.js"]
	},
	"action": {
		"default_icon": "scroll_1f4dc.png",
		"default_popup": "popup.html"
	},
	"permissions": ["activeTab", "contextMenus", "scripting"]
}
